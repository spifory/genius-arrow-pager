{
  "manifest_version": 3,
  "name": "Genius Arrow Pager",
  "version": "0.1.0",
  "description": "Allows you to page through a Genius album's songs using your arrow keys.",
  "homepage_url": "https://codeberg.org/spf/genius-arrow-pager",
  "content_scripts": [
    {
      "matches": [
        "*://*.genius.com/*"
      ],
      "js": ["./index.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "genius-arrow-pager@spf.lol"
    }
  }
}
