{
  "manifest_version": 3,
  "name": "Genius Arrow Pager",
  "version": "0.1.0",
  "description": "Allows you to page through a Genius album's songs using your arrow keys.",
  "homepage_url": "https://codeberg.org/spf/genius-arrow-pager",
  "content_scripts": [
    {
      "matches": [
        "*://*.genius.com/*"
      ],
      "js": [
        "./index.js"
      ]
    }
  ],
  "icons": {
    "16": "./assets/icons/logo_16x16.png",
    "48": "./assets/icons/logo_48x48.png",
    "128": "./assets/icons/logo_128x128.png",
    "256": "./assets/icons/logo_256x256.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "genius-arrow-pager@spf.lol"
    }
  }
}
